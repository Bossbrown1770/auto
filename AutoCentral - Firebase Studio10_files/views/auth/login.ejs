<% layout('../layout') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-car-front-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-2">Welcome Back</h2>
                        <p class="text-muted">Sign in to your account</p>
                    </div>

                    <form action="/auth/login" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="login" class="form-label">Email or Phone</label>
                            <input type="text" class="form-control form-control-lg" id="login" name="login" required>
                            <div class="invalid-feedback">
                                Please enter your email or phone number.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control form-control-lg" id="password" name="password" required>
                            <div class="invalid-feedback">
                                Please enter your password.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Sign In
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a href="/auth/register" class="text-decoration-none">Sign up here</a></p>
                    </div>
                </div>
            </div>

            <!-- Admin Notice -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    Admin? Use your admin credentials to access the admin panel.
                </small>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Form validation
    const form = document.querySelector('form');
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>