<% layout('../../layout') %>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="bi bi-car-front"></i> Manage Cars</h1>
        <a href="/admin/cars/add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Car
        </a>
    </div>

    <!-- Cars Table -->
    <div class="card shadow">
        <div class="card-body">
            <% if (cars && cars.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Image</th>
                                <th>Vehicle</th>
                                <th>Price</th>
                                <th>Mileage</th>
                                <th>Status</th>
                                <th>Added</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cars.forEach(function(car) { %>
                                <tr>
                                    <td>
                                        <% if (car.images && car.images.length > 0) { %>
                                            <img src="/uploads/<%= car.images[0] %>" alt="<%= car.getTitle() %>" class="rounded" style="width: 60px; height: 45px; object-fit: cover;">
                                        <% } else { %>
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 45px;">
                                                <i class="bi bi-car-front text-muted"></i>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="fw-bold"><%= car.getTitle() %></div>
                                        <small class="text-muted">
                                            <i class="bi bi-fuel-pump"></i> <%= car.fuelType %> â€¢ 
                                            <i class="bi bi-gear"></i> <%= car.transmission %>
                                        </small>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-primary"><%= car.getFormattedPrice() %></span>
                                    </td>
                                    <td>
                                        <%= car.mileage.toLocaleString() %> miles
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input availability-toggle" type="checkbox" 
                                                   data-car-id="<%= car._id %>" 
                                                   <%= car.isAvailable ? 'checked' : '' %>>
                                            <label class="form-check-label">
                                                <span class="badge bg-<%= car.isAvailable ? 'success' : 'danger' %>">
                                                    <%= car.isAvailable ? 'Available' : 'Sold' %>
                                                </span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <%= car.createdAt.toLocaleDateString() %>
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/cars/<%= car._id %>" class="btn btn-sm btn-outline-primary" target="_blank" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/admin/cars/edit/<%= car._id %>" class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="POST" action="/admin/cars/<%= car._id %>?_method=DELETE" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this car?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (pagination && pagination.totalPages > 1) { %>
                    <nav aria-label="Car list pagination" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <% if (pagination.hasPrev) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>">Previous</a>
                                </li>
                            <% } %>
                            
                            <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (pagination.hasNext) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-car-front text-muted" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">No cars found</h4>
                    <p class="text-muted">Start by adding your first car to the inventory.</p>
                    <a href="/admin/cars/add" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First Car
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle availability toggle
    document.querySelectorAll('.availability-toggle').forEach(function(toggle) {
        toggle.addEventListener('change', function() {
            const carId = this.dataset.carId;
            
            fetch(`/admin/cars/${carId}/toggle`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update the badge
                    const badge = this.parentElement.querySelector('.badge');
                    if (data.isAvailable) {
                        badge.className = 'badge bg-success';
                        badge.textContent = 'Available';
                    } else {
                        badge.className = 'badge bg-danger';
                        badge.textContent = 'Sold';
                    }
                } else {
                    // Revert the toggle
                    this.checked = !this.checked;
                    alert('Error updating car availability');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                this.checked = !this.checked;
                alert('Error updating car availability');
            });
        });
    });
});
</script>