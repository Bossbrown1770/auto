<% layout('layout') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-page">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                </div>
                
                <h1 class="display-1 fw-bold text-primary"><%= error.status || 500 %></h1>
                
                <% if (error.status === 404) { %>
                    <h2 class="mb-3">Page Not Found</h2>
                    <p class="lead text-muted">Sorry, the page you are looking for doesn't exist.</p>
                <% } else { %>
                    <h2 class="mb-3">Something Went Wrong</h2>
                    <p class="lead text-muted">We apologize for the inconvenience. Please try again later.</p>
                <% } %>
                
                <% if (error.message) { %>
                    <div class="alert alert-info">
                        <%= error.message %>
                    </div>
                <% } %>
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="bi bi-house"></i> Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>