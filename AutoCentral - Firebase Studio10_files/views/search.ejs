<% layout('layout') %>

<div class="container py-4">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Search Cars</h1>
        <p class="lead text-muted">Find your perfect car with our advanced search</p>
    </div>

    <!-- Search Form -->
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/search" method="GET">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="make" class="form-label">Make</label>
                                <input type="text" class="form-control" id="make" name="make" value="<%= query.make || '' %>" placeholder="e.g. Toyota, Honda">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="model" class="form-label">Model</label>
                                <input type="text" class="form-control" id="model" name="model" value="<%= query.model || '' %>" placeholder="e.g. Camry, Civic">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="number" class="form-control" id="year" name="year" value="<%= query.year || '' %>" min="1900" max="<%= new Date().getFullYear() + 1 %>" placeholder="e.g. 2015">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="minPrice" class="form-label">Min Price ($)</label>
                                <input type="number" class="form-control" id="minPrice" name="minPrice" value="<%= query.minPrice || '' %>" min="0" max="3000" placeholder="500">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="maxPrice" class="form-label">Max Price ($)</label>
                                <input type="number" class="form-control" id="maxPrice" name="maxPrice" value="<%= query.maxPrice || '' %>" min="0" max="3000" placeholder="3000">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fuelType" class="form-label">Fuel Type</label>
                                <select class="form-select" id="fuelType" name="fuelType">
                                    <option value="">Any</option>
                                    <option value="Gasoline" <%= query.fuelType === 'Gasoline' ? 'selected' : '' %>>Gasoline</option>
                                    <option value="Diesel" <%= query.fuelType === 'Diesel' ? 'selected' : '' %>>Diesel</option>
                                    <option value="Electric" <%= query.fuelType === 'Electric' ? 'selected' : '' %>>Electric</option>
                                    <option value="Hybrid" <%= query.fuelType === 'Hybrid' ? 'selected' : '' %>>Hybrid</option>
                                    <option value="Other" <%= query.fuelType === 'Other' ? 'selected' : '' %>>Other</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="transmission" class="form-label">Transmission</label>
                                <select class="form-select" id="transmission" name="transmission">
                                    <option value="">Any</option>
                                    <option value="Manual" <%= query.transmission === 'Manual' ? 'selected' : '' %>>Manual</option>
                                    <option value="Automatic" <%= query.transmission === 'Automatic' ? 'selected' : '' %>>Automatic</option>
                                    <option value="CVT" <%= query.transmission === 'CVT' ? 'selected' : '' %>>CVT</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/search" class="btn btn-outline-secondary">Clear</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search Cars
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results -->
    <% if (Object.keys(query).length > 0) { %>
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h3>Search Results</h3>
                <span class="text-muted">
                    <%= resultsCount %> car<%= resultsCount !== 1 ? 's' : '' %> found
                </span>
            </div>
        </div>

        <% if (cars && cars.length > 0) { %>
            <div class="row">
                <% cars.forEach(function(car) { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (car.images && car.images.length > 0) { %>
                                <img src="/uploads/<%= car.images[0] %>" class="card-img-top" alt="<%= car.getTitle() %>" style="height: 250px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <i class="bi bi-car-front text-muted" style="font-size: 4rem;"></i>
                                </div>
                            <% } %>
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= car.getTitle() %></h5>
                                <p class="card-text text-muted">
                                    <small>
                                        <i class="bi bi-speedometer2"></i> <%= car.mileage.toLocaleString() %> miles<br>
                                        <i class="bi bi-fuel-pump"></i> <%= car.fuelType %> â€¢ 
                                        <i class="bi bi-gear"></i> <%= car.transmission %>
                                    </small>
                                </p>
                                
                                <div class="card-text flex-grow-1">
                                    <%= car.description.substring(0, 100) %><% if (car.description.length > 100) { %>...<% } %>
                                </div>
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h4 text-primary fw-bold mb-0"><%= car.getFormattedPrice() %></span>
                                        <a href="/cars/<%= car._id %>" class="btn btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No cars found</h4>
                <p class="text-muted">Try adjusting your search criteria or <a href="/cars">browse all cars</a></p>
            </div>
        <% } %>
    <% } else { %>
        <!-- Quick Search Options -->
        <div class="row">
            <div class="col-12">
                <h3 class="mb-3">Popular Searches</h3>
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-3">
                        <a href="/search?maxPrice=1500" class="card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-currency-dollar text-success" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Under $1,500</h5>
                                <p class="text-muted small">Budget-friendly options</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-3">
                        <a href="/search?fuelType=Hybrid" class="card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-lightning text-warning" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Hybrid Cars</h5>
                                <p class="text-muted small">Fuel efficient vehicles</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-3">
                        <a href="/search?transmission=Automatic" class="card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-gear text-primary" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Automatic</h5>
                                <p class="text-muted small">Easy to drive</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-3">
                        <a href="/search?year=2010" class="card text-decoration-none h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-calendar text-info" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">2010 & Newer</h5>
                                <p class="text-muted small">Modern features</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>