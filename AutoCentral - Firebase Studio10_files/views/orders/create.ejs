<% layout('../layout') %>

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/cars">Inventory</a></li>
            <li class="breadcrumb-item"><a href="/cars/<%= car._id %>"><%= car.getTitle() %></a></li>
            <li class="breadcrumb-item active" aria-current="page">Order</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-4 order-lg-2">
            <div class="card sticky-top" style="top: 2rem;">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <% if (car.images && car.images.length > 0) { %>
                        <img src="/uploads/<%= car.images[0] %>" class="img-fluid rounded mb-3" alt="<%= car.getTitle() %>">
                    <% } %>
                    
                    <h6><%= car.getTitle() %></h6>
                    <p class="text-muted small">
                        <i class="bi bi-speedometer2"></i> <%= car.mileage.toLocaleString() %> miles •
                        <i class="bi bi-fuel-pump"></i> <%= car.fuelType %> •
                        <i class="bi bi-gear"></i> <%= car.transmission %>
                    </p>
                    
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Vehicle Price:</span>
                        <span class="fw-bold"><%= car.getFormattedPrice() %></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Fees:</span>
                        <span class="text-success">$0</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <strong class="text-primary"><%= car.getFormattedPrice() %></strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Form -->
        <div class="col-lg-8 order-lg-1">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Complete Your Order</h3>
                </div>
                <div class="card-body">
                    <form action="/orders/create/<%= car._id %>" method="POST" novalidate>
                        <!-- Customer Information -->
                        <div class="mb-4">
                            <h5 class="text-primary">Customer Information</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerName" class="form-label">Full Name *</label>
                                        <input type="text" class="form-control" id="customerName" name="customerInfo[name]" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerEmail" class="form-label">Email Address *</label>
                                        <input type="email" class="form-control" id="customerEmail" name="customerInfo[email]" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerPhone" class="form-label">Phone Number *</label>
                                        <input type="tel" class="form-control" id="customerPhone" name="customerInfo[phone]" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="customerAddress" class="form-label">Address *</label>
                                        <input type="text" class="form-control" id="customerAddress" name="customerInfo[address]" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="mb-4">
                            <h5 class="text-primary">Payment Method</h5>
                            <p class="text-muted small">Select your preferred payment method. We'll contact you with payment details after you submit this order.</p>
                            
                            <div class="row">
                                <% paymentMethods.forEach(function(method, index) { %>
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="paymentMethod" id="payment<%= index %>" value="<%= method %>" <% if (index === 0) { %>checked<% } %> required>
                                            <label class="form-check-label d-flex align-items-center" for="payment<%= index %>">
                                                <% if (method === 'Cash App') { %>
                                                    <i class="bi bi-cash-coin text-success me-2"></i>
                                                <% } else if (method === 'Zelle') { %>
                                                    <i class="bi bi-lightning-charge text-warning me-2"></i>
                                                <% } else if (method === 'PayPal') { %>
                                                    <i class="bi bi-paypal text-info me-2"></i>
                                                <% } else if (method === 'Apple Pay') { %>
                                                    <i class="bi bi-apple text-dark me-2"></i>
                                                <% } else if (method === 'Chime') { %>
                                                    <i class="bi bi-bank text-primary me-2"></i>
                                                <% } else if (method === 'Varo') { %>
                                                    <i class="bi bi-credit-card text-danger me-2"></i>
                                                <% } else { %>
                                                    <i class="bi bi-gift text-purple me-2"></i>
                                                <% } %>
                                                <%= method %>
                                            </label>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>

                        <!-- Additional Notes -->
                        <div class="mb-4">
                            <h5 class="text-primary">Additional Notes (Optional)</h5>
                            <textarea class="form-control" name="notes" rows="3" placeholder="Any special requests or questions about the vehicle..."></textarea>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="mb-4">
                            <div class="alert alert-info">
                                <h6><i class="bi bi-info-circle"></i> Important Information</h6>
                                <ul class="mb-0 small">
                                    <li>All vehicles are sold as-is and inspected before purchase is recommended</li>
                                    <li>Payment must be completed before vehicle pickup</li>
                                    <li>We will contact you within 24 hours to arrange payment and pickup</li>
                                    <li>Vehicle availability is subject to confirmation</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Submit Order
                            </button>
                            <a href="/cars/<%= car._id %>" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Vehicle
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Form validation
    const form = document.querySelector('form');
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>