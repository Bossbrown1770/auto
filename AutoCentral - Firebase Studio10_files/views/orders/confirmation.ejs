<% layout('../layout') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="text-center mb-5">
                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-check-lg" style="font-size: 2.5rem;"></i>
                </div>
                <h1 class="mt-3 text-success">Order Confirmed!</h1>
                <p class="lead">Thank you for your order. We'll be in touch soon!</p>
            </div>

            <!-- Order Details Card -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-receipt"></i> Order Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <% if (order.carId && order.carId.images && order.carId.images.length > 0) { %>
                                <img src="/uploads/<%= order.carId.images[0] %>" class="img-fluid rounded mb-3" alt="<%= order.carId.getTitle() %>">
                            <% } %>
                        </div>
                        <div class="col-md-6">
                            <h5>Vehicle Information</h5>
                            <ul class="list-unstyled">
                                <% if (order.carId) { %>
                                    <li><strong>Vehicle:</strong> <%= order.carId.getTitle() %></li>
                                    <li><strong>Price:</strong> <span class="text-primary fw-bold"><%= order.carId.getFormattedPrice() %></span></li>
                                <% } %>
                                <li><strong>Order #:</strong> <%= order.getSummary().orderNumber %></li>
                                <li><strong>Date:</strong> <%= order.createdAt.toLocaleDateString() %></li>
                                <li><strong>Status:</strong> <span class="badge bg-warning">Pending</span></li>
                            </ul>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Customer Information</h5>
                            <ul class="list-unstyled">
                                <li><strong>Name:</strong> <%= order.customerInfo.name %></li>
                                <li><strong>Email:</strong> <%= order.customerInfo.email %></li>
                                <li><strong>Phone:</strong> <%= order.customerInfo.phone %></li>
                                <li><strong>Address:</strong> <%= order.customerInfo.address %></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Payment Information</h5>
                            <ul class="list-unstyled">
                                <li><strong>Method:</strong> <%= order.paymentMethod %></li>
                                <li><strong>Total Amount:</strong> <span class="text-success fw-bold"><%= order.getFormattedAmount() %></span></li>
                                <li><strong>Status:</strong> <span class="badge bg-secondary">Awaiting Payment</span></li>
                            </ul>

                            <% if (order.notes) { %>
                                <h5 class="mt-3">Notes</h5>
                                <p class="text-muted"><%= order.notes %></p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list-check"></i> What Happens Next?</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 50px; height: 50px;">
                                <i class="bi bi-telephone"></i>
                            </div>
                            <h6>1. We'll Contact You</h6>
                            <p class="small text-muted">Within 24 hours, we'll call or text you with payment instructions and next steps.</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 50px; height: 50px;">
                                <i class="bi bi-credit-card"></i>
                            </div>
                            <h6>2. Complete Payment</h6>
                            <p class="small text-muted">Pay securely using your selected payment method (<%= order.paymentMethod %>).</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 50px; height: 50px;">
                                <i class="bi bi-car-front"></i>
                            </div>
                            <h6>3. Pickup Your Car</h6>
                            <p class="small text-muted">Schedule a convenient time to pick up your vehicle and complete the paperwork.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-headset"></i> Questions or Concerns?</h5>
                </div>
                <div class="card-body">
                    <p>If you have any questions about your order or need to make changes, please contact us immediately:</p>
                    
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <a href="tel:+14704998139" class="btn btn-outline-primary w-100">
                                <i class="bi bi-telephone"></i><br>
                                <small>Call Us</small><br>
                                <strong>(470) 499-8139</strong>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="mailto:frankrooney474@gmail.com" class="btn btn-outline-primary w-100">
                                <i class="bi bi-envelope"></i><br>
                                <small>Email Us</small><br>
                                <strong>frankrooney474@gmail.com</strong>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="https://t.me/carsforsaleunder3000" target="_blank" class="btn btn-outline-primary w-100">
                                <i class="bi bi-telegram"></i><br>
                                <small>Telegram</small><br>
                                <strong>@carsforsaleunder3000</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <a href="/cars" class="btn btn-primary me-2">
                    <i class="bi bi-arrow-left"></i> Browse More Cars
                </a>
                <a href="/" class="btn btn-outline-primary">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>

            <!-- Important Notice -->
            <div class="alert alert-info mt-4">
                <h6><i class="bi bi-info-circle"></i> Important Notice</h6>
                <ul class="mb-0 small">
                    <li>Save this order confirmation for your records</li>
                    <li>Your order number is: <strong><%= order.getSummary().orderNumber %></strong></li>
                    <li>The vehicle is now reserved for you pending payment confirmation</li>
                    <li>If you need to cancel, please contact us as soon as possible</li>
                </ul>
            </div>
        </div>
    </div>
</div>